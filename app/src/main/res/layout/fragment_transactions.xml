<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/there_are_no_transactions_yet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDisplay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_one"
        android:drawableBottom="@drawable/ic_arrow_down_black_24dp"
        android:drawableTint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/fabWrite"
        app:layout_constraintEnd_toEndOf="@+id/fabWrite"
        app:layout_constraintStart_toStartOf="@+id/fabWrite"
        tools:ignore="UnusedAttribute" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|top"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottomDrawerTransaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_playlist_add_white_24dp" />

    <com.njair.homeledger.ui.DialogDrawerView
        android:id="@+id/bottomDrawerTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:innerLayout="@layout/dialog_create_transaction"
        app:okButtonText="@string/add"
        app:cancelButtonText="@string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>